<UserControl x:Class="Controls.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Controls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource PrimaryBackground}"
             PreviewMouseDown="UserControl_PreviewMouseDown">
    <Grid x:Name="MainGrid" 
          Margin="30" 
          Focusable="True" 
          Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding DataContext.TasksSectionTitle, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='📝 {0}'}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryText}"/>
            <TextBlock Text="Управление текущими задачами" 
                       FontSize="14" 
                       Foreground="{DynamicResource SecondaryText}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Command="{Binding ShowTodayTasksCommand}"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Срок исполнения сегодня">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📅 Сегодня" VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource ButtonDanger}" 
                            CornerRadius="10" 
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Visibility="{Binding TodayTasksCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock Text="{Binding TodayTasksCount}" 
                                   Foreground="White" 
                                   FontSize="11"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowOnlyToday}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBorder}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Command="{Binding ShowOverdueTasksCommand}"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Все задачи, срок исполнения которых просрочен">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️ Просроченные" VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource PrimaryBackground}" 
                            CornerRadius="10" 
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Visibility="{Binding OverdueTasksCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock Text="{Binding OverdueTasksCount}" 
                                   Foreground="{DynamicResource ButtonDanger}" 
                                   FontSize="11"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource ButtonDangerLight}"/>
                        <Setter Property="Foreground" Value="{DynamicResource ButtonDanger}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowOverdue}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonDanger}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonDangerHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Command="{Binding ShowAllTasksCommand}"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Все задачи, находящиеся на исполнении">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📋 Все задачи" VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource ButtonPrimary}" 
                            CornerRadius="10" 
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Visibility="{Binding AllTasksCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock Text="{Binding AllTasksCount}" 
                                   Foreground="White" 
                                   FontSize="11"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowAllTasks}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBorder}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Command="{Binding AddTaskCommand}"
                    Width="36"
                    Height="36"
                    FontSize="18"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Добавить новое задание"
                    Margin="10,0,0,0">
                <TextBlock Text="+" FontWeight="Bold"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonSuccessHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBackground}"
                CornerRadius="10"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="SearchTextBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Margin="0,0,15,0"
                         ToolTip="Поиск по названию задания, описанию или имени исполнителя">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="Text" Value=""/>
                                        <Condition Property="IsFocused" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Поиск..." 
                                                               Foreground="{DynamicResource TertiaryText}"
                                                               FontSize="14"
                                                               Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDateDetected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📅" 
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding DateSearchTypes}"
                              SelectedItem="{Binding DateSearchType, Mode=TwoWay}"
                              MinWidth="160"
                              FontSize="13"
                              VerticalAlignment="Center"
                              ToolTip="Выберите тип даты для поиска">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="BorderThickness" Value="1.5"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                    <TextBlock Text="Исполнитель:" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="AssigneeComboBox"
                              ItemsSource="{Binding Assignees}"
                              SelectedItem="{Binding SelectedAssignee, Mode=TwoWay}"
                              SelectionChanged="AssigneeComboBox_SelectionChanged"
                              DropDownOpened="AssigneeComboBox_DropDownOpened"
                              DropDownClosed="AssigneeComboBox_DropDownClosed"
                              PreviewMouseDown="AssigneeComboBox_PreviewMouseDown"
                              MinWidth="180"
                              MaxWidth="250"
                              FontSize="13"
                              Height="36"
                              VerticalContentAlignment="Center"
                              ToolTip="Фильтр заданий по исполнителю">
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Тип:" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="TaskTypeComboBox"
                              ItemsSource="{Binding TaskTypes}"
                              SelectedItem="{Binding SelectedTaskType, Mode=TwoWay}"
                              SelectionChanged="TaskTypeComboBox_SelectionChanged"
                              MinWidth="150"
                              MaxWidth="200"
                              FontSize="13"
                              Height="36"
                              VerticalContentAlignment="Center">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="3"
                  x:Name="TasksDataGrid"
                  ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowHeight="50"
                  FontSize="13"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource PrimaryBorder}"
                  Background="{DynamicResource DataGridBackground}"
                  Sorting="DataGrid_Sorting"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource DataGridBackground}"/>
                    <EventSetter Event="ContextMenuOpening" Handler="DataGridRow_ContextMenuOpening"/>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="📝 Редактировать" 
                                          Command="{Binding EditTaskCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                <MenuItem Header="🗑️ Удалить" 
                                          Command="{Binding DeleteTaskCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                <Separator/>
                                <MenuItem Header="👁️ Детали" 
                                          Command="{Binding ViewTaskDetailsCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedRow}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBorder}"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Наименование" 
                                        Width="*"
                                        CanUserSort="True"
                                        SortMemberPath="Title">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ButtonPrimary}"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       Margin="5,0">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftClick" 
                                                  Command="{Binding DataContext.ViewTaskDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding}"/>
                                </TextBlock.InputBindings>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Откуда поступило" 
                                    Binding="{Binding ControlNumber}" 
                                    Width="180"
                                    CanUserSort="True"
                                    SortMemberPath="ControlNumber">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Исполнитель" 
                                    Binding="{Binding AssigneeShortName}" 
                                    Width="200"
                                    CanUserSort="True"
                                    SortMemberPath="Assignee">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding ExecutorInfo}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата поступления" 
                                    Binding="{Binding CreatedDate, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="CreatedDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата исполнения" 
                                    Binding="{Binding DueDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"  
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="DueDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
