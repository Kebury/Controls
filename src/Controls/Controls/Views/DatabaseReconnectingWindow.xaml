<Window x:Class="Controls.Views.DatabaseReconnectingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ожидание подключения к базе данных"
        Width="490" Height="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="True"
        Topmost="True">

    <Border Background="White"
            CornerRadius="12"
            BorderBrush="#CC4444"
            BorderThickness="2"
            Padding="5">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              ShadowDepth="3"
                              BlurRadius="20"
                              Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="28,22,28,22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,0,0,18">
                <TextBlock Text="⚠️"
                           FontSize="22"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="База данных недоступна"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Foreground="#CC4444"/>
            </StackPanel>

            <!-- Спиннер + статус -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <Grid Width="100" Height="100" Margin="0,0,0,16">
                    <Ellipse Width="80" Height="80"
                             Stroke="#F0F0F0"
                             StrokeThickness="6"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                    <Ellipse x:Name="SpinnerEllipse"
                             Width="80" Height="80"
                             Stroke="#CC4444"
                             StrokeThickness="6"
                             StrokeDashArray="22,8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="SpinnerRotation"
                                            Storyboard.TargetProperty="Angle"
                                            From="0" To="360" Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <TextBlock x:Name="StatusTextBlock"
                           Text="Ожидание восстановления соединения с базой данных..."
                           FontSize="12"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"
                           Foreground="#555555"
                           Margin="0,0,0,6"/>

                <TextBlock x:Name="DbPathTextBlock"
                           FontSize="10"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"
                           Margin="0,0,0,4"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <TextBlock x:Name="TimerTextBlock"
                               Text="Время ожидания: 0:00"
                               FontSize="11"
                               Foreground="#888888"
                               Margin="0,0,16,0"/>
                    <TextBlock x:Name="AttemptTextBlock"
                               Text="Попытка 1..."
                               FontSize="11"
                               Foreground="#888888"/>
                </StackPanel>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button x:Name="MinimizeButton"
                        Content="Свернуть в трей"
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="MinimizeToTray_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#005FA3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CloseAppButton"
                        Content="Закрыть приложение"
                        Padding="16,8"
                        Background="#CC4444"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseApp_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A33333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
