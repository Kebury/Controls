<Window x:Class="Controls.Views.DatabaseUnavailableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="База данных недоступна"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        ShowInTaskbar="True"
        Topmost="True">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF4CE"
                BorderBrush="#FFE69C"
                BorderThickness="0,0,0,1"
                Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️"
                             FontSize="24"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="База данных недоступна"
                             FontSize="18"
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1"
                    Margin="20"
                    VerticalAlignment="Center">
            
            <TextBlock x:Name="MessageTextBlock"
                     FontSize="14"
                     TextWrapping="Wrap"
                     Margin="0,0,0,20"
                     Foreground="#333333"/>

            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Путь к базе данных:"
                             FontSize="12"
                             Foreground="#666666"
                             Margin="0,0,0,5"/>
                    <TextBlock x:Name="PathTextBlock"
                             FontSize="13"
                             FontFamily="Consolas"
                             TextWrapping="Wrap"
                             Foreground="#000000"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Возможные причины:"
                     FontSize="12"
                     FontWeight="SemiBold"
                     Margin="0,10,0,5"
                     Foreground="#666666"/>
            <TextBlock FontSize="12"
                     Foreground="#666666"
                     TextWrapping="Wrap">
                <Run Text="• Сетевая папка временно недоступна"/><LineBreak/>
                <Run Text="• Проблемы с подключением к сети"/><LineBreak/>
                <Run Text="• Файл БД заблокирован другим приложением"/><LineBreak/>
                <Run Text="• Недостаточно прав доступа"/>
            </TextBlock>
        </StackPanel>

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="⏳ Ожидать доступа"
                            Click="WaitForAccess_Click"
                            Background="#4CAF50"
                            ToolTip="Продолжить ожидание подключения к БД"/>

                    <Button Grid.Column="1"
                            Content="📁 Выбрать другую БД"
                            Click="SelectOtherDatabase_Click"
                            Background="#2196F3"
                            ToolTip="Подключиться к другому файлу базы данных"/>
                </Grid>

                <Button Content="❌ Выйти из приложения"
                        Click="Exit_Click"
                        Background="#F44336"
                        Margin="0,5,0,0"
                        ToolTip="Закрыть приложение"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
