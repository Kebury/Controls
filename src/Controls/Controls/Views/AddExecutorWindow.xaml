<Window x:Class="Controls.Views.AddExecutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить исполнителя" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SecondaryBackground}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Добавление нового исполнителя" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryText}"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1"
                Background="{DynamicResource PrimaryBackground}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ФИО полностью*" 
                           FontSize="13" 
                           Foreground="{DynamicResource SecondaryText}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox"
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,5"
                         TextChanged="FullNameTextBox_TextChanged"
                         ToolTip="Введите ФИО в формате: Фамилия Имя Отчество"/>
                
                <TextBlock x:Name="ShortNamePreview"
                           FontSize="12" 
                           Foreground="{DynamicResource SecondaryText}"
                           FontStyle="Italic"
                           Margin="0,0,0,15"
                           Text="Будет отображаться как: "/>

                <TextBlock Text="Должность*" 
                           FontSize="13" 
                           Foreground="{DynamicResource SecondaryText}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PositionTextBox"
                         FontSize="14"
                         Padding="10"
                         ToolTip="Введите должность"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="AddButton"
                    Content="Добавить" 
                    Click="Add_Click"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Background="{DynamicResource ButtonSuccess}"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonSuccessHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Отмена" 
                    Click="Cancel_Click"
                    Padding="20,10"
                    Background="{DynamicResource ButtonSecondary}"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonSecondaryHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
