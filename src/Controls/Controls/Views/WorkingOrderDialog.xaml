<Window x:Class="Controls.Views.WorkingOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Исполнение в рабочем порядке"
        Height="220" Width="450"
        MinHeight="200" MinWidth="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="{DynamicResource PrimaryBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Задание исполнено в рабочем порядке?" 
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryText}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1"
                   Text="Выберите действие:"
                   FontSize="14"
                   Foreground="{DynamicResource SecondaryText}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Да, с ответом"
                    Click="WithReportButton_Click"
                    Width="140"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="{DynamicResource ButtonPrimary}"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Без ответа"
                    Click="WithoutReportButton_Click"
                    Width="140"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="{DynamicResource ButtonSuccess}"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonSuccessHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    Width="100"
                    Height="40"
                    Background="{DynamicResource SecondaryBackground}"
                    Foreground="{DynamicResource PrimaryText}"
                    BorderBrush="{DynamicResource PrimaryBorder}"
                    BorderThickness="1"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
