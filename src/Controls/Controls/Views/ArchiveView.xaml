<UserControl x:Class="Controls.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls.Views"
             xmlns:helpers="clr-namespace:Controls.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource PrimaryBackground}"
             PreviewMouseDown="UserControl_PreviewMouseDown">
    <UserControl.Resources>
        <helpers:DepartmentNamesConverter x:Key="DepartmentNamesConverter"/>
        
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ButtonPrimary}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   Cursor="Hand"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainGrid" 
          Margin="30" 
          Focusable="True" 
          Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📦 Архив задач" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryText}"/>
            <TextBlock Text="История всех завершённых задач" 
                       FontSize="14" 
                       Foreground="{DynamicResource SecondaryText}"
                       Margin="0,5,0,0"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button Content="Задачи организации"
                        Command="{Binding ShowControlTasksCommand}"
                        FontSize="13"
                        Height="36"
                        Padding="15,0"
                        Margin="0,0,10,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowControlTasks}" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Задачи в организации"
                        Command="{Binding ShowDepartmentTasksCommand}"
                        FontSize="13"
                        Height="36"
                        Padding="15,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowDepartmentTasks}" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="{DynamicResource SecondaryBackground}"
                CornerRadius="10"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="SearchTextBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Margin="0,0,15,0"
                         ToolTip="Поиск по названию задания, описанию или имени исполнителя">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="Text" Value=""/>
                                        <Condition Property="IsFocused" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Поиск..." 
                                                               Foreground="{DynamicResource TertiaryText}"
                                                               FontSize="14"
                                                               Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDateDetected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📅" 
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding DateSearchTypes}"
                              SelectedItem="{Binding DateSearchType, Mode=TwoWay}"
                              MinWidth="160"
                              FontSize="13"
                              VerticalAlignment="Center"
                              ToolTip="Выберите тип даты для поиска">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="BorderThickness" Value="1.5"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowControlTasks}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Исполнитель:" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Assignees}"
                              SelectedItem="{Binding SelectedAssignee, Mode=TwoWay}"
                              MinWidth="180"
                              MaxWidth="250"
                              FontSize="13"
                              Height="36"
                              VerticalContentAlignment="Center">
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Tasks}"
                  SelectedItem="{Binding SelectedTask}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowHeight="50"
                  FontSize="13"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource PrimaryBorder}"
                  Background="{DynamicResource DataGridBackground}"
                  Sorting="DataGrid_Sorting"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowControlTasks}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource DataGridBackground}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedRow}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBorder}"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Наименование" 
                                        Width="*"
                                        CanUserSort="True"
                                        SortMemberPath="Title">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Title}"
                                    Command="{Binding DataContext.ViewTaskDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource LinkButtonStyle}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="5,0"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Откуда поступило" 
                                    Binding="{Binding ControlNumber}" 
                                    Width="180"
                                    CanUserSort="True"
                                    SortMemberPath="ControlNumber">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Исполнитель" 
                                    Binding="{Binding Assignee}" 
                                    Width="200"
                                    CanUserSort="True"
                                    SortMemberPath="Assignee">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding ExecutorInfo}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата поступления" 
                                    Binding="{Binding CreatedDate, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="CreatedDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата исполнения" 
                                    Binding="{Binding CompletedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="CompletedDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DepartmentTasks}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowHeight="50"
                  FontSize="13"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource PrimaryBorder}"
                  Background="{DynamicResource DataGridBackground}">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowDepartmentTasks}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource DataGridBackground}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedRow}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBorder}"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Номер задания" 
                                        Width="150"
                                        CanUserSort="True"
                                        SortMemberPath="TaskNumber">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding TaskNumber}"
                                    Command="{Binding DataContext.ViewDepartmentTaskDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource LinkButtonStyle}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="5,0"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Организация(и)" 
                                    Binding="{Binding ., Converter={StaticResource DepartmentNamesConverter}}" 
                                    Width="*"
                                    MinWidth="200"
                                    CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Исполнитель" 
                                    Binding="{Binding Executor.ShortName}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="Executor.ShortName">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата направления" 
                                    Binding="{Binding SentDate, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="SentDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата исполнения" 
                                    Binding="{Binding CompletedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                    Width="150"
                                    CanUserSort="True"
                                    SortMemberPath="CompletedDate">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
