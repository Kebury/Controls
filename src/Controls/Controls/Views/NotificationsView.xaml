<UserControl x:Class="Controls.Views.NotificationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:Controls.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBackground}"
             PreviewMouseDown="UserControl_PreviewMouseDown">
    <Grid x:Name="MainGrid" 
          Margin="20" 
          Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Уведомления" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryText}"
                       VerticalAlignment="Center"/>
            
            <Border Background="{DynamicResource ButtonDanger}" 
                    CornerRadius="12"
                    Padding="10,1"
                    Margin="5,0,0,0"
                    Visibility="{Binding HasUnprocessedNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="{Binding UnprocessedCount}" 
                           Foreground="White" 
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Command="{Binding ShowActiveCommand}"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔴 Активные" VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource ButtonDanger}" 
                                CornerRadius="10"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding ActiveCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="{Binding ActiveCount}" 
                                       Foreground="White" 
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Button.Content>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowActive}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Command="{Binding ShowAwaitingCommand}"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏳ Ожидает" VerticalAlignment="Center"/>
                        <Border Background="#FFA500" 
                                CornerRadius="10"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding AwaitingCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="{Binding AwaitingCount}" 
                                       Foreground="White" 
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Button.Content>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowAwaiting}" Value="True">
                                <Setter Property="Background" Value="#FFA500"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="📋 История" 
                    Command="{Binding ShowHistoryCommand}"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowHistory}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBackground}"
                CornerRadius="10"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="SearchTextBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Margin="0,0,15,0"
                         ToolTip="Поиск по номеру контроля, названию задания, описанию или сообщению">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="Text" Value=""/>
                                        <Condition Property="IsFocused" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Поиск..." 
                                                               Foreground="{DynamicResource TertiaryText}"
                                                               FontSize="14"
                                                               Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDateDetected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📅" 
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding DateSearchTypes}"
                              SelectedItem="{Binding DateSearchType, Mode=TwoWay}"
                              MinWidth="160"
                              FontSize="13"
                              VerticalAlignment="Center"
                              ToolTip="Выберите тип даты для поиска">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimary}"/>
                                <Setter Property="BorderThickness" Value="1.5"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Notifications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource SecondaryBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="15"
                                Background="{DynamicResource PrimaryBackground}">
                            
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Width="50" Height="50"
                                        CornerRadius="25"
                                        VerticalAlignment="Top"
                                        Margin="0,0,15,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueTomorrow}">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonWarning}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueToday}">
                                                    <Setter Property="Background" Value="#4A90E2"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.Overdue}">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonDanger}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsReportSent}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsCompletedInWorkingOrder}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ControlTask.Status}" Value="Исполнено">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="🔔" 
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border CornerRadius="3" 
                                                Padding="8,3"
                                                Margin="0,0,10,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonPrimary}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueTomorrow}">
                                                            <Setter Property="Background" Value="{DynamicResource ButtonWarning}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueToday}">
                                                            <Setter Property="Background" Value="#4A90E2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.Overdue}">
                                                            <Setter Property="Background" Value="{DynamicResource ButtonDanger}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsReportSent}" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCompletedInWorkingOrder}" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ControlTask.Status}" Value="Исполнено">
                                                            <Setter Property="Background" Value="{DynamicResource ButtonSuccess}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Foreground="White" 
                                                       FontSize="12"
                                                       FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding NotificationTypeDisplay}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsReportSent}" Value="True">
                                                                <Setter Property="Text" Value="Обработано"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsCompletedInWorkingOrder}" Value="True">
                                                                <Setter Property="Text" Value="Обработано"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ControlTask.Status}" Value="Исполнено">
                                                                <Setter Property="Text" Value="{Binding ControlTask.CompletedDate, StringFormat='Исполнено {0:dd.MM.yyyy}'}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding NotificationDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource TertiaryText}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Message}" 
                                               FontSize="14" 
                                               Foreground="{DynamicResource PrimaryText}"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsReportSent}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCompletedInWorkingOrder}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Контроль № " FontSize="12" Foreground="{DynamicResource SecondaryText}"/>
                                        <TextBlock Text="{Binding ControlTask.ControlNumber}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" Margin="3,0"/>
                                        <TextBlock Text="•" FontSize="12" Foreground="{DynamicResource PrimaryBorder}" Margin="5,0"/>
                                        <TextBlock Text="{Binding ControlTask.Title}" FontSize="12" Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>

                                    <Border Background="{DynamicResource SecondaryBackground}" 
                                            CornerRadius="4" 
                                            Padding="10,6" 
                                            Margin="0,0,0,8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsReportSent}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCompletedInWorkingOrder}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="📝 История исполнения" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SecondaryText}" 
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding ControlTask.LastIntermediateResponseDisplay}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource PrimaryText}"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource SuccessBackground}" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,4,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Setters>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </Style.Setters>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding OutgoingNumber}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding OutgoingNumber}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📤 Исх. № " FontSize="11" Foreground="{DynamicResource ButtonSuccess}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding OutgoingNumber}" FontSize="11" Foreground="{DynamicResource ButtonSuccess}" Margin="4,0"/>
                                            <TextBlock Text="от" FontSize="11" Foreground="{DynamicResource ButtonSuccess}" Margin="4,0,2,0"/>
                                            <TextBlock Text="{Binding OutgoingDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="11" Foreground="{DynamicResource ButtonSuccess}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource WarningBackground}" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,4,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCompletedInWorkingOrder}" Value="True"/>
                                                            <Condition Binding="{Binding IsReportSent}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✅ Исполнено в рабочем порядке " 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource ButtonWarning}" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ControlTask.CompletedDate, StringFormat='({}{0:dd.MM.yyyy})'}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource ButtonWarning}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top">
                                    
                                    <Button Content="📤 Ответ направлен" 
                                            Command="{Binding DataContext.ShowReportDialogCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,6"
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource ButtonPrimary}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="12">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueToday}"/>
                                                            <Condition Binding="{Binding IsReportSent}" Value="False"/>
                                                            <Condition Binding="{Binding IsCompletedInWorkingOrder}" Value="False"/>
                                                            <Condition Binding="{Binding IsAwaitingReport}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ButtonPrimaryHover}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="⚙️ В рабочем порядке" 
                                            Command="{Binding DataContext.ShowWorkingOrderDialogCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,6"
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource ButtonWarning}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="12">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.DueToday}"/>
                                                            <Condition Binding="{Binding IsReportSent}" Value="False"/>
                                                            <Condition Binding="{Binding IsCompletedInWorkingOrder}" Value="False"/>
                                                            <Condition Binding="{Binding IsAwaitingReport}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ButtonWarningHover}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="📤 Ответ направлен" 
                                            Command="{Binding DataContext.ShowReportDialogCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,6"
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource ButtonDanger}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="12">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding NotificationType}" Value="{x:Static models:NotificationType.Overdue}"/>
                                                            <Condition Binding="{Binding IsReportSent}" Value="False"/>
                                                            <Condition Binding="{Binding IsAwaitingReport}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ButtonDangerHover}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="📤 Отправить ответ" 
                                            Command="{Binding DataContext.ShowReportDialogCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,6"
                                            Margin="0,0,0,5"
                                            Background="#FFA500"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="12">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAwaitingReport}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="👁️ Информация" 
                                            Command="{Binding DataContext.ViewTaskDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,6"
                                            Background="{DynamicResource ButtonSecondary}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="12">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ButtonSecondaryHover}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
